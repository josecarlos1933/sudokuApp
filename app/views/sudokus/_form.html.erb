<div class="form">
  <%= form_for(@sudoku) do |f| %>
    <% if @sudoku.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@sudoku.errors.count, "error") %> prohibited this sudoku from being saved:</h2>

        <ul>
        <% @sudoku.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :difficulty %><br><br>
      <%= f.label :difficulty, "Easy", :value => "Easy"  %>
      <%= f.radio_button :difficulty, "easy", :checked => true %><br><br>
      <%= f.label :difficulty, "Medium", :value => "Medium"  %>
      <%= f.radio_button :difficulty, "medium"%><br><br>
          <%= f.label :difficulty, "Hard", :value => "Hard"  %>
      <%= f.radio_button :difficulty, "hard" %><br><br>
    </div>
    <div class="field">
      <%= f.label :player_id %><br>
      <%= f.text_field :player_id %>
    </div><br>
    <div class="actions">
      <%= f.submit :PLAY %>
    </div>
  <% end %>   
</div>